{
  "manifest_version": 2,
  "name": "Chess Assistant",
  "version": "1.0",
  "description": "Assists in making better chess decisions.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Chess Assistant",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://chess-ai.ir/"
  ]
}